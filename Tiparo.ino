#include <Servo.h>

Servo servoX;
Servo servoY;
Servo servoZ;

/*****************************************************************************/
/*                                                                           */
/* setup()                                                                   */
/*                                                                           */
/*****************************************************************************/
void setup()
{
    servoX.attach( 6 );
    servoY.attach( 7 );
}

/*****************************************************************************/
/*                                                                           */
/* loop()                                                                    */
/*                                                                           */
/*****************************************************************************/
void loop()
{
    testServos();
}

/*****************************************************************************/
/*                                                                           */
/* testServos()                                                              */
/*                                                                           */
/*****************************************************************************/
void testServos()
{
int pos = 0;
    
    /*****************************************************************************/
    /* Servo X                                                                   */
    /*****************************************************************************/
    for( pos = 0; pos < 180; pos +=1 )
    {
        servoX.write( pos );
        delay( 15 );
    }

    for( pos = 180; pos >= 1; pos -= 1 )
    {
        servoX.write( pos );
        delay( 15 );
    }

    /*****************************************************************************/
    /* Servo Y                                                                   */
    /*****************************************************************************/
    for( pos = 0; pos < 180; pos +=1 )
    {
        servoY.write( pos );
        delay( 15 );
    }

    for( pos = 180; pos >= 1; pos -= 1 )
    {
        servoY.write( pos );
        delay( 15 );
    }
}

